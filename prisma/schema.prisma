generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // ví dụ: postgresql://username:password@host:port/dbname
}

model Admin {
  id           Int    @id @default(autoincrement())
  username     String @unique
  passwordHash String
}

model User {
  id            Int      @id @default(autoincrement())
  name          String
  phone         String   @unique
  hasSpun       Boolean  @default(false)
  prize         String?
  createdAt     DateTime @default(now())
  deviceKey     String?  @unique
  licensePlate2 String?  @unique
}

model PrizeConfig {
  id        Int      @id @default(autoincrement())
  name      String
  ratio     Float
  quantity  Int      @default(0)
  remaining Int      @default(0)
  createdAt DateTime @default(now())
}

model SpinHistory {
  id          Int      @id @default(autoincrement())
  phone       String
  prize       String
  ip          String?
  userAgent   String?
  deviceKey   String?
  plateNumber String?
  createdAt   DateTime @default(now())
}

model CardTopup {
  id        Int      @id @default(autoincrement())
  phone     String
  provider  String
  amount    Int
  code      String
  serial    String
  requestId String   @unique
  status    Int
  message   String?
  transId   String?
  createdAt DateTime @default(now())
}
